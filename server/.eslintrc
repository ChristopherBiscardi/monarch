{
    'parser': 'babel-eslint',
    'extends': 'airbnb',
    'env': {
        'browser': true,
        'node': true,
        'es6': true
    },
    'parserOptions': {
        'ecmaVersion': 6,
        'sourceType': 'module',
        'ecmaFeatures': {
            'jsx': true
        }
    },
    'rules': {
        'arrow-body-style': [2, 'as-needed'],
        'arrow-parens': [2, 'as-needed'],
        'comma-dangle': [2, 'always-multiline'],
        'indent': [2, 2, { 'SwitchCase': 1 }],
        'max-len': 0,
        'newline-per-chained-call': 0,
        'no-console': 1,
        'no-use-before-define': 0,
        'prefer-template': 2,
        'react/prefer-stateless-function': 0,
    },
}